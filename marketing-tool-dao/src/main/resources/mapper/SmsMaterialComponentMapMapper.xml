<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.rongcapital.mkt.dao.SmsMaterialComponentMapDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[ id as id,sms_material_id as smsMaterialId,sms_component_id as smsComponentId,sms_component_type as smsComponentType,status as status,create_time as createTime,update_time as updateTime]]>
	</sql>

	<!-- 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM sms_material__component_map]]></sql>
	
	<!-- 全部条件 -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
		    	<if test="id != null"><![CDATA[ AND id = #{id}]]></if>
		    	<if test="smsMaterialId != null"><![CDATA[ AND sms_material_id = #{smsMaterialId}]]></if>
		    	<if test="smsComponentId != null"><![CDATA[ AND sms_component_id = #{smsComponentId}]]></if>
		    	<if test="smsComponentType != null"><![CDATA[ AND sms_component_type = #{smsComponentType}]]></if>
		    	<if test="status != null"><![CDATA[ AND status = #{status}]]></if>
		    	<if test="createTime != null"><![CDATA[ AND create_time = #{createTime}]]></if>
		    	<if test="updateTime != null"><![CDATA[ AND update_time = #{updateTime}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderFieldType != null"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>	
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
		    	<if test="smsMaterialId != null"><![CDATA[sms_material_id = #{smsMaterialId},]]></if>
		    	<if test="smsComponentId != null"><![CDATA[sms_component_id = #{smsComponentId},]]></if>
		    	<if test="smsComponentType != null"><![CDATA[sms_component_type = #{smsComponentType},]]></if>
		    	<if test="status != null"><![CDATA[status = #{status}]]></if>
		</set>
	</sql>

	<!-- 插入action记录 -->
	<insert id="insert" parameterType="cn.rongcapital.mkt.po.SmsMaterialComponentMap" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO sms_material__component_map (sms_material_id,sms_component_id,sms_component_type,create_time)
			VALUES
			(
			  #{smsMaterialId},
			  #{smsComponentId},
			  #{smsComponentType},
			  now()
			)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 修改记录通过主键 -->
	<update id="updateById" parameterType="cn.rongcapital.mkt.po.SmsMaterialComponentMap">
		<![CDATA[UPDATE sms_material__component_map]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectListByIdList" parameterType="cn.rongcapital.mkt.po.SmsMaterialComponentMap" resultType="cn.rongcapital.mkt.po.SmsMaterialComponentMap">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="list" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectList" parameterType="cn.rongcapital.mkt.po.SmsMaterialComponentMap" resultType="cn.rongcapital.mkt.po.SmsMaterialComponentMap">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectListCount" parameterType="cn.rongcapital.mkt.po.SmsMaterialComponentMap" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	<update id="deleteBySmsMaterialId" parameterType="cn.rongcapital.mkt.po.SmsMaterialComponentMap">
		<![CDATA[UPDATE sms_material__component_map]]>
		<set>
			status = #{status}
		</set>
		<![CDATA[WHERE sms_material_id = #{smsMaterialId}]]>
	</update>
	
</mapper>