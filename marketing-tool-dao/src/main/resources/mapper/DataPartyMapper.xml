<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.rongcapital.mkt.dao.DataPartyDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[ id,account_name,name,gender,age,home_address,work_address,home_status,work_status,member_level,mobile,email,wechat,qq,weibo,order_count,order_amount,cart_item_count,favorite_item_count,salary,offline_activity_attendence]]>
	</sql>

	<!-- 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM data_party]]></sql>
	
	<!-- 全部条件 -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
		    	<if test="id != null and id != ''"><![CDATA[ AND id = #{id}]]></if>
		    	<if test="accountName != null and accountName != ''"><![CDATA[ AND account_name = #{accountName}]]></if>
		    	<if test="name != null and name != ''"><![CDATA[ AND name = #{name}]]></if>
		    	<if test="gender != null and gender != ''"><![CDATA[ AND gender = #{gender}]]></if>
		    	<if test="age != null and age != ''"><![CDATA[ AND age = #{age}]]></if>
		    	<if test="homeAddress != null and homeAddress != ''"><![CDATA[ AND home_address = #{homeAddress}]]></if>
		    	<if test="workAddress != null and workAddress != ''"><![CDATA[ AND work_address = #{workAddress}]]></if>
		    	<if test="homeStatus != null and homeStatus != ''"><![CDATA[ AND home_status = #{homeStatus}]]></if>
		    	<if test="workStatus != null and workStatus != ''"><![CDATA[ AND work_status = #{workStatus}]]></if>
		    	<if test="memberLevel != null and memberLevel != ''"><![CDATA[ AND member_level = #{memberLevel}]]></if>
		    	<if test="mobile != null and mobile != ''"><![CDATA[ AND mobile = #{mobile}]]></if>
		    	<if test="email != null and email != ''"><![CDATA[ AND email = #{email}]]></if>
		    	<if test="wechat != null and wechat != ''"><![CDATA[ AND wechat = #{wechat}]]></if>
		    	<if test="qq != null and qq != ''"><![CDATA[ AND qq = #{qq}]]></if>
		    	<if test="weibo != null and weibo != ''"><![CDATA[ AND weibo = #{weibo}]]></if>
		    	<if test="orderCount != null and orderCount != ''"><![CDATA[ AND order_count = #{orderCount}]]></if>
		    	<if test="orderAmount != null and orderAmount != ''"><![CDATA[ AND order_amount = #{orderAmount}]]></if>
		    	<if test="cartItemCount != null and cartItemCount != ''"><![CDATA[ AND cart_item_count = #{cartItemCount}]]></if>
		    	<if test="favoriteItemCount != null and favoriteItemCount != ''"><![CDATA[ AND favorite_item_count = #{favoriteItemCount}]]></if>
		    	<if test="salary != null and salary != ''"><![CDATA[ AND salary = #{salary}]]></if>
		    	<if test="offlineActivityAttendence != null and offlineActivityAttendence != ''"><![CDATA[offline_activity_attendence = #{offlineActivityAttendence}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>	
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
		    	<if test="id != null"><![CDATA[AND id = #{id},]]></if>
		    	<if test="accountName != null"><![CDATA[AND account_name = #{accountName},]]></if>
		    	<if test="name != null"><![CDATA[AND name = #{name},]]></if>
		    	<if test="gender != null"><![CDATA[AND gender = #{gender},]]></if>
		    	<if test="age != null"><![CDATA[AND age = #{age},]]></if>
		    	<if test="homeAddress != null"><![CDATA[AND home_address = #{homeAddress},]]></if>
		    	<if test="workAddress != null"><![CDATA[AND work_address = #{workAddress},]]></if>
		    	<if test="homeStatus != null"><![CDATA[AND home_status = #{homeStatus},]]></if>
		    	<if test="workStatus != null"><![CDATA[AND work_status = #{workStatus},]]></if>
		    	<if test="memberLevel != null"><![CDATA[AND member_level = #{memberLevel},]]></if>
		    	<if test="mobile != null"><![CDATA[AND mobile = #{mobile},]]></if>
		    	<if test="email != null"><![CDATA[AND email = #{email},]]></if>
		    	<if test="wechat != null"><![CDATA[AND wechat = #{wechat},]]></if>
		    	<if test="qq != null"><![CDATA[AND qq = #{qq},]]></if>
		    	<if test="weibo != null"><![CDATA[AND weibo = #{weibo},]]></if>
		    	<if test="orderCount != null"><![CDATA[AND order_count = #{orderCount},]]></if>
		    	<if test="orderAmount != null"><![CDATA[AND order_amount = #{orderAmount},]]></if>
		    	<if test="cartItemCount != null"><![CDATA[AND cart_item_count = #{cartItemCount},]]></if>
		    	<if test="favoriteItemCount != null"><![CDATA[AND favorite_item_count = #{favoriteItemCount},]]></if>
		    	<if test="salary != null"><![CDATA[AND salary = #{salary},]]></if>
		    	<if test="offlineActivityAttendence != null"><![CDATA[AND offline_activity_attendence = #{offlineActivityAttendence}]]></if>
		</set>
	</sql>

	<!-- 插入action记录 -->
	<insert id="insert" parameterType="cn.rongcapital.mkt.po.DataParty" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO data_party (id,account_name,name,gender,age,home_address,work_address,home_status,work_status,member_level,mobile,email,wechat,qq,weibo,order_count,order_amount,cart_item_count,favorite_item_count,salary,offline_activity_attendence)
			VALUES
			(
			  #{id},
			  #{accountName},
			  #{name},
			  #{gender},
			  #{age},
			  #{homeAddress},
			  #{workAddress},
			  #{homeStatus},
			  #{workStatus},
			  #{memberLevel},
			  #{mobile},
			  #{email},
			  #{wechat},
			  #{qq},
			  #{weibo},
			  #{orderCount},
			  #{orderAmount},
			  #{cartItemCount},
			  #{favoriteItemCount},
			  #{salary},
			  #{offlineActivityAttendence}
			)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 修改记录通过主键 -->
	<update id="updateById" parameterType="cn.rongcapital.mkt.po.DataParty">
		<![CDATA[UPDATE data_party]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectListByIdList" parameterType="cn.rongcapital.mkt.po.DataParty" resultType="cn.rongcapital.mkt.po.DataParty">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="list" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectList" parameterType="cn.rongcapital.mkt.po.DataParty" resultType="cn.rongcapital.mkt.po.DataParty">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectListCount" parameterType="cn.rongcapital.mkt.po.DataParty" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
	
</mapper>