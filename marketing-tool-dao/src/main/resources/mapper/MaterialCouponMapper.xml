<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.rongcapital.mkt.dao.MaterialCouponDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[ id as id,title as title,source_code as sourceCode,type as type,coupon_status as couponStatus,rule as rule,stock_total as stockTotal,stock_rest as stockRest,amount as amount,chanel_code as chanelCode,start_time as startTime,end_time as endTime,task_id as taskId,task_name as taskName,status as status,create_time as createTime,update_time as updateTime]]>
	</sql>

	<!-- 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM material_coupon]]></sql>
	
	<!-- 全部条件 -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
		    	<if test="id != null"><![CDATA[ AND id = #{id}]]></if>
		    	<if test="title != null"><![CDATA[ AND title = #{title}]]></if>
		    	<if test="sourceCode != null"><![CDATA[ AND source_code = #{sourceCode}]]></if>
		    	<if test="type != null"><![CDATA[ AND type = #{type}]]></if>
		    	<if test="couponStatus != null"><![CDATA[ AND coupon_status = #{couponStatus}]]></if>
		    	<if test="rule != null"><![CDATA[ AND rule = #{rule}]]></if>
		    	<if test="stockTotal != null"><![CDATA[ AND stock_total = #{stockTotal}]]></if>
		    	<if test="stockRest != null"><![CDATA[ AND stock_rest = #{stockRest}]]></if>
		    	<if test="amount != null"><![CDATA[ AND amount = #{amount}]]></if>
		    	<if test="chanelCode != null"><![CDATA[ AND chanel_code = #{chanelCode}]]></if>
		    	<if test="startTime != null"><![CDATA[ AND start_time = #{startTime}]]></if>
		    	<if test="endTime != null"><![CDATA[ AND end_time = #{endTime}]]></if>
		    	<if test="taskId != null"><![CDATA[ AND task_id = #{taskId}]]></if>
		    	<if test="taskName != null"><![CDATA[ AND task_name = #{taskName}]]></if>
		    	<if test="status != null"><![CDATA[ AND status = #{status}]]></if>
		    	<if test="createTime != null"><![CDATA[ AND create_time = #{createTime}]]></if>
		    	<if test="updateTime != null"><![CDATA[ AND update_time = #{updateTime}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderFieldType != null"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>	
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
		    	<if test="title != null"><![CDATA[title = #{title},]]></if>
		    	<if test="sourceCode != null"><![CDATA[source_code = #{sourceCode},]]></if>
		    	<if test="type != null"><![CDATA[type = #{type},]]></if>
		    	<if test="couponStatus != null"><![CDATA[coupon_status = #{couponStatus},]]></if>
		    	<if test="rule != null"><![CDATA[rule = #{rule},]]></if>
		    	<if test="stockTotal != null"><![CDATA[stock_total = #{stockTotal},]]></if>
		    	<if test="stockRest != null"><![CDATA[stock_rest = #{stockRest},]]></if>
		    	<if test="amount != null"><![CDATA[amount = #{amount},]]></if>
		    	<if test="chanelCode != null"><![CDATA[chanel_code = #{chanelCode},]]></if>
		    	<if test="startTime != null"><![CDATA[start_time = #{startTime},]]></if>
		    	<if test="endTime != null"><![CDATA[end_time = #{endTime},]]></if>
		    	<if test="taskId != null"><![CDATA[task_id = #{taskId},]]></if>
		    	<if test="taskName != null"><![CDATA[task_name = #{taskName},]]></if>
		    	<if test="status != null"><![CDATA[status = #{status}]]></if>
		</set>
	</sql>

	<!-- 插入action记录 -->
	<insert id="insert" parameterType="cn.rongcapital.mkt.po.MaterialCoupon" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO material_coupon (title,source_code,type,coupon_status,rule,stock_total,stock_rest,amount,chanel_code,start_time,end_time,task_id,task_name,create_time)
			VALUES
			(
			  #{title},
			  #{sourceCode},
			  #{type},
			  #{couponStatus},
			  #{rule},
			  #{stockTotal},
			  #{stockRest},
			  #{amount},
			  #{chanelCode},
			  #{startTime},
			  #{endTime},
			  #{taskId},
			  #{taskName},
			  now()
			)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 修改记录通过主键 -->
	<update id="updateById" parameterType="cn.rongcapital.mkt.po.MaterialCoupon">
		<![CDATA[UPDATE material_coupon]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectListByIdList" parameterType="cn.rongcapital.mkt.po.MaterialCoupon" resultType="cn.rongcapital.mkt.po.MaterialCoupon">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="list" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectList" parameterType="cn.rongcapital.mkt.po.MaterialCoupon" resultType="cn.rongcapital.mkt.po.MaterialCoupon">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectListCount" parameterType="cn.rongcapital.mkt.po.MaterialCoupon" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	<!-- 修改记录通过主键和有效状态 -->
	<update id="updateByIdAndStatus" parameterType="cn.rongcapital.mkt.po.MaterialCoupon">
		<![CDATA[UPDATE material_coupon]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id} AND status = 0]]>
	</update>
	
	<!-- 总数查询,通过条件 -->
	<select id="getMaterialCouponCount" parameterType="java.util.Map" resultType="long">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE status = 0]]>
    	<if test="title != null and title != ''">
	    	<bind name="titlelike" value="'%'+title+'%'"/>
	    	<![CDATA[ AND title like #{titlelike}]]>
    	</if>
    	<if test="chanelCode != null and chanelCode != ''"><![CDATA[ AND chanel_code = #{chanelCode}]]></if>
    	<if test="couponStatus != null and couponStatus != ''"><![CDATA[ AND coupon_status = #{couponStatus}]]></if>
	</select>
</mapper>