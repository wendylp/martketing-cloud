<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.rongcapital.mkt.dao.DataPublicDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[ id,open_id,public_name,nick_name,icon_url,gender,area,deleted,delete_time]]>
	</sql>

	<!-- 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM data_public]]></sql>
	
	<!-- 全部条件 -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
		    	<if test="id != null and id != ''"><![CDATA[ AND id = #{id}]]></if>
		    	<if test="openId != null and openId != ''"><![CDATA[ AND open_id = #{openId}]]></if>
		    	<if test="publicName != null and publicName != ''"><![CDATA[ AND public_name = #{publicName}]]></if>
		    	<if test="nickName != null and nickName != ''"><![CDATA[ AND nick_name = #{nickName}]]></if>
		    	<if test="iconUrl != null and iconUrl != ''"><![CDATA[ AND icon_url = #{iconUrl}]]></if>
		    	<if test="gender != null and gender != ''"><![CDATA[ AND gender = #{gender}]]></if>
		    	<if test="area != null and area != ''"><![CDATA[ AND area = #{area}]]></if>
		    	<if test="deleted != null and deleted != ''"><![CDATA[ AND deleted = #{deleted}]]></if>
		    	<if test="deleteTime != null and deleteTime != ''"><![CDATA[delete_time = #{deleteTime}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>	
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
		    	<if test="id != null"><![CDATA[AND id = #{id},]]></if>
		    	<if test="openId != null"><![CDATA[AND open_id = #{openId},]]></if>
		    	<if test="publicName != null"><![CDATA[AND public_name = #{publicName},]]></if>
		    	<if test="nickName != null"><![CDATA[AND nick_name = #{nickName},]]></if>
		    	<if test="iconUrl != null"><![CDATA[AND icon_url = #{iconUrl},]]></if>
		    	<if test="gender != null"><![CDATA[AND gender = #{gender},]]></if>
		    	<if test="area != null"><![CDATA[AND area = #{area},]]></if>
		    	<if test="deleted != null"><![CDATA[AND deleted = #{deleted},]]></if>
		    	<if test="deleteTime != null"><![CDATA[AND delete_time = #{deleteTime}]]></if>
		</set>
	</sql>

	<!-- 插入action记录 -->
	<insert id="insert" parameterType="cn.rongcapital.mkt.po.DataPublic" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO data_public (id,open_id,public_name,nick_name,icon_url,gender,area,deleted,delete_time)
			VALUES
			(
			  #{id},
			  #{openId},
			  #{publicName},
			  #{nickName},
			  #{iconUrl},
			  #{gender},
			  #{area},
			  #{deleted},
			  #{deleteTime}
			)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 修改记录通过主键 -->
	<update id="updateById" parameterType="cn.rongcapital.mkt.po.DataPublic">
		<![CDATA[UPDATE data_public]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectListByIdList" parameterType="cn.rongcapital.mkt.po.DataPublic" resultType="cn.rongcapital.mkt.po.DataPublic">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="list" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectList" parameterType="cn.rongcapital.mkt.po.DataPublic" resultType="cn.rongcapital.mkt.po.DataPublic">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectListCount" parameterType="cn.rongcapital.mkt.po.DataPublic" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
	<!-- 根据taskId查询相关数据 -->
	<select id="selectByTaskId" parameterType="java.util.Map" resultType="cn.rongcapital.mkt.po.DataPublic">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE task_id IN]]>
		<foreach collection="list" item="taskId" open="(" separator="," close=")">
			<![CDATA[#{taskId}]]>
		</foreach>
	</select>
	
</mapper>