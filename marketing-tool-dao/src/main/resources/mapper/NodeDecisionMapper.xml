<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.rongcapital.mkt.dao.NodeDecisionDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[ id,type,rule_key,campaign_tpl_id,node_status,pos_x,pos_y]]>
	</sql>

	<!-- 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM node_decision]]></sql>
	
	<!-- 全部条件 -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
		    	<if test="id != null and id != ''"><![CDATA[id = #{id} AND ]]></if>
		    	<if test="type != null and type != ''"><![CDATA[type = #{type} AND ]]></if>
		    	<if test="rule_key != null and rule_key != ''"><![CDATA[rule_key = #{rule_key} AND ]]></if>
		    	<if test="campaign_tpl_id != null and campaign_tpl_id != ''"><![CDATA[campaign_tpl_id = #{campaign_tpl_id} AND ]]></if>
		    	<if test="node_status != null and node_status != ''"><![CDATA[node_status = #{node_status} AND ]]></if>
		    	<if test="pos_x != null and pos_x != ''"><![CDATA[pos_x = #{pos_x} AND ]]></if>
		    	<if test="pos_y != null and pos_y != ''"><![CDATA[pos_y = #{pos_y}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>	
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
		    	<if test="id != null"><![CDATA[AND id = #{id},]]></if>
		    	<if test="type != null"><![CDATA[AND type = #{type},]]></if>
		    	<if test="rule_key != null"><![CDATA[AND rule_key = #{rule_key},]]></if>
		    	<if test="campaign_tpl_id != null"><![CDATA[AND campaign_tpl_id = #{campaign_tpl_id},]]></if>
		    	<if test="node_status != null"><![CDATA[AND node_status = #{node_status},]]></if>
		    	<if test="pos_x != null"><![CDATA[AND pos_x = #{pos_x},]]></if>
		    	<if test="pos_y != null"><![CDATA[AND pos_y = #{pos_y}]]></if>
		</set>
	</sql>

	<!-- 插入action记录 -->
	<insert id="insert" parameterType="cn.rongcapital.mkt.po.NodeDecision" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO node_decision (id,type,rule_key,campaign_tpl_id,node_status,pos_x,pos_y)
			VALUES
			(
			  #{id},#{type},#{rule_key},#{campaign_tpl_id},#{node_status},#{pos_x},#{pos_y}
			)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 修改记录通过主键 -->
	<update id="updateById" parameterType="cn.rongcapital.mkt.po.NodeDecision">
		<![CDATA[UPDATE node_decision]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectListByIdList" parameterType="cn.rongcapital.mkt.po.NodeDecision" resultType="cn.rongcapital.mkt.po.NodeDecision">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="list" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectList" parameterType="cn.rongcapital.mkt.po.NodeDecision" resultType="cn.rongcapital.mkt.po.NodeDecision">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectListCount" parameterType="cn.rongcapital.mkt.po.NodeDecision" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
	
</mapper>