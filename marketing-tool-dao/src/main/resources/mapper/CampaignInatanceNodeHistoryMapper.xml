<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.rongcapital.mkt.dao.CampaignInatanceNodeHistoryDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[ id,campaign_instance_id,node_id,audience_count,segment_id,snapshaot_id]]>
	</sql>

	<!-- 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM campaign_inatance_node_history]]></sql>
	
	<!-- 全部条件 -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
		    	<if test="id != null and id != ''"><![CDATA[id = #{id} AND ]]></if>
		    	<if test="campaign_instance_id != null and campaign_instance_id != ''"><![CDATA[campaign_instance_id = #{campaign_instance_id} AND ]]></if>
		    	<if test="node_id != null and node_id != ''"><![CDATA[node_id = #{node_id} AND ]]></if>
		    	<if test="audience_count != null and audience_count != ''"><![CDATA[audience_count = #{audience_count} AND ]]></if>
		    	<if test="segment_id != null and segment_id != ''"><![CDATA[segment_id = #{segment_id} AND ]]></if>
		    	<if test="snapshaot_id != null and snapshaot_id != ''"><![CDATA[snapshaot_id = #{snapshaot_id}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>	
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
		    	<if test="id != null"><![CDATA[AND id = #{id},]]></if>
		    	<if test="campaign_instance_id != null"><![CDATA[AND campaign_instance_id = #{campaign_instance_id},]]></if>
		    	<if test="node_id != null"><![CDATA[AND node_id = #{node_id},]]></if>
		    	<if test="audience_count != null"><![CDATA[AND audience_count = #{audience_count},]]></if>
		    	<if test="segment_id != null"><![CDATA[AND segment_id = #{segment_id},]]></if>
		    	<if test="snapshaot_id != null"><![CDATA[AND snapshaot_id = #{snapshaot_id}]]></if>
		</set>
	</sql>

	<!-- 插入action记录 -->
	<insert id="insert" parameterType="cn.rongcapital.mkt.po.CampaignInatanceNodeHistory" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO campaign_inatance_node_history (id,campaign_instance_id,node_id,audience_count,segment_id,snapshaot_id)
			VALUES
			(
			  #{id},#{campaign_instance_id},#{node_id},#{audience_count},#{segment_id},#{snapshaot_id}
			)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 修改记录通过主键 -->
	<update id="updateById" parameterType="cn.rongcapital.mkt.po.CampaignInatanceNodeHistory">
		<![CDATA[UPDATE campaign_inatance_node_history]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectListByIdList" parameterType="cn.rongcapital.mkt.po.CampaignInatanceNodeHistory" resultType="cn.rongcapital.mkt.po.CampaignInatanceNodeHistory">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="list" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectList" parameterType="cn.rongcapital.mkt.po.CampaignInatanceNodeHistory" resultType="cn.rongcapital.mkt.po.CampaignInatanceNodeHistory">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectListCount" parameterType="cn.rongcapital.mkt.po.CampaignInatanceNodeHistory" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
	
</mapper>