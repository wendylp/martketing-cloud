<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.rongcapital.mkt.dao.UserDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[ id,user_name,user_id,role_id,icon,passwd,status,created_time,update_time]]>
	</sql>

	<!-- 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM user]]></sql>
	
	<!-- 全部条件 -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
		    	<if test="id != null and id != ''"><![CDATA[id = #{id} AND ]]></if>
		    	<if test="userName != null and userName != ''"><![CDATA[user_name = #{userName} AND ]]></if>
		    	<if test="userId != null and userId != ''"><![CDATA[user_id = #{userId} AND ]]></if>
		    	<if test="roleId != null and roleId != ''"><![CDATA[role_id = #{roleId} AND ]]></if>
		    	<if test="icon != null and icon != ''"><![CDATA[icon = #{icon} AND ]]></if>
		    	<if test="passwd != null and passwd != ''"><![CDATA[passwd = #{passwd} AND ]]></if>
		    	<if test="status != null and status != ''"><![CDATA[status = #{status} AND ]]></if>
		    	<if test="createdTime != null and createdTime != ''"><![CDATA[created_time = #{createdTime} AND ]]></if>
		    	<if test="updateTime != null and updateTime != ''"><![CDATA[update_time = #{updateTime}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>	
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
		    	<if test="id != null"><![CDATA[AND id = #{id},]]></if>
		    	<if test="userName != null"><![CDATA[AND user_name = #{userName},]]></if>
		    	<if test="userId != null"><![CDATA[AND user_id = #{userId},]]></if>
		    	<if test="roleId != null"><![CDATA[AND role_id = #{roleId},]]></if>
		    	<if test="icon != null"><![CDATA[AND icon = #{icon},]]></if>
		    	<if test="passwd != null"><![CDATA[AND passwd = #{passwd},]]></if>
		    	<if test="status != null"><![CDATA[AND status = #{status},]]></if>
		    	<if test="createdTime != null"><![CDATA[AND created_time = #{createdTime},]]></if>
		    	<if test="updateTime != null"><![CDATA[AND update_time = #{updateTime}]]></if>
		</set>
	</sql>

	<!-- 插入action记录 -->
	<insert id="insert" parameterType="cn.rongcapital.mkt.po.User" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO user (id,user_name,user_id,role_id,icon,passwd,status,created_time,update_time)
			VALUES
			(
			  #{id},
			  #{userName},
			  #{userId},
			  #{roleId},
			  #{icon},
			  #{passwd},
			  #{status},
			  #{createdTime},
			  #{updateTime}
			)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 修改记录通过主键 -->
	<update id="updateById" parameterType="cn.rongcapital.mkt.po.User">
		<![CDATA[UPDATE user]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectListByIdList" parameterType="cn.rongcapital.mkt.po.User" resultType="cn.rongcapital.mkt.po.User">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="list" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectList" parameterType="cn.rongcapital.mkt.po.User" resultType="cn.rongcapital.mkt.po.User">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectListCount" parameterType="cn.rongcapital.mkt.po.User" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
	
</mapper>