<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.rongcapital.mkt.dao.SegmentationDao">

	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[ id as id,name as name,publish_status as publishStatus,tag_id as tagId,exclude as exclude,group_index as groupIndex,create_time as createTime,update_time as updateTime,status as status]]>
	</sql>

	<!-- 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM segmentation]]></sql>
	
	<!-- 全部条件 -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
		    	<if test="id != null and id != ''"><![CDATA[ AND id = #{id}]]></if>
		    	<if test="name != null and name != ''"><![CDATA[ AND name = #{name}]]></if>
		    	<if test="publishStatus != null and publishStatus != ''"><![CDATA[ AND publish_status = #{publishStatus}]]></if>
		    	<if test="tagId != null and tagId != ''"><![CDATA[ AND tag_id = #{tagId}]]></if>
		    	<if test="exclude != null and exclude != ''"><![CDATA[ AND exclude = #{exclude}]]></if>
		    	<if test="groupIndex != null and groupIndex != ''"><![CDATA[ AND group_index = #{groupIndex}]]></if>
		    	<if test="createTime != null and createTime != ''"><![CDATA[ AND create_time = #{createTime}]]></if>
		    	<if test="updateTime != null and updateTime != ''"><![CDATA[ AND update_time = #{updateTime}]]></if>
		    	<if test="status != null and status != ''"><![CDATA[ AND status = #{status}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>	
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
		    	<if test="id != null"><![CDATA[id = #{id},]]></if>
		    	<if test="name != null"><![CDATA[name = #{name},]]></if>
		    	<if test="publishStatus != null"><![CDATA[publish_status = #{publishStatus},]]></if>
		    	<if test="tagId != null"><![CDATA[tag_id = #{tagId},]]></if>
		    	<if test="exclude != null"><![CDATA[exclude = #{exclude},]]></if>
		    	<if test="groupIndex != null"><![CDATA[group_index = #{groupIndex},]]></if>
		    	<if test="createTime != null"><![CDATA[create_time = #{createTime},]]></if>
		    	<if test="updateTime != null"><![CDATA[update_time = #{updateTime},]]></if>
		    	<if test="status != null"><![CDATA[status = #{status}]]></if>
		</set>
	</sql>

	<!-- 插入action记录 -->
	<insert id="insert" parameterType="cn.rongcapital.mkt.po.Segmentation" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO segmentation (id,name,publish_status,tag_id,exclude,group_index,create_time,update_time,status)
			VALUES
			(
			  #{id},
			  #{name},
			  #{publishStatus},
			  #{tagId},
			  #{exclude},
			  #{groupIndex},
			  #{createTime},
			  #{updateTime},
			  #{status}
			)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 修改记录通过主键 -->
	<update id="updateById" parameterType="cn.rongcapital.mkt.po.Segmentation">
		<![CDATA[UPDATE segmentation]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectListByIdList" parameterType="cn.rongcapital.mkt.po.Segmentation" resultType="cn.rongcapital.mkt.po.Segmentation">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="list" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectList" parameterType="cn.rongcapital.mkt.po.Segmentation" resultType="cn.rongcapital.mkt.po.Segmentation">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectListCount" parameterType="cn.rongcapital.mkt.po.Segmentation" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
    <select id="selectListByKeyword" parameterType="cn.rongcapital.mkt.po.Segmentation" resultType="cn.rongcapital.mkt.po.Segmentation">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<if test="customMap.keyword != null and customMap.keyword != ''"> 
		 <where> and name like CONCAT('%',#{customMap.keyword},'%' )</where>
		</if>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>
	
</mapper>